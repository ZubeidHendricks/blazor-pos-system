@page "/forgot-password"
@inject IAuthenticationService AuthService
@inject NavigationManager NavigationManager

<div class="forgot-password-container">
    <EditForm Model="@forgotPasswordModel" OnValidSubmit="HandleForgotPassword">
        <div class="form-group">
            <label>Email</label>
            <InputText @bind-Value="forgotPasswordModel.Email" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </EditForm>
</div>

@code {
    private string forgotPasswordModel = new string();

    private async Task HandleForgotPassword()
    {
        await AuthService.ForgotPasswordAsync(forgotPasswordModel);
        NavigationManager.NavigateTo("/login");
    }
}